@using System.Web.Optimization
@using BootstrapSupport
@using NavigationRoutes
<!DOCTYPE html>
<html lang="en" style="background-color:white">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - VisaRoom</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Scripts.Render("~/bundles/jquery")
        @Styles.Render("~/content/bundle")
        @Scripts.Render("~/bootstrapjs")
        @Scripts.Render("~/bundles/modernizr")      
        @Scripts.Render("~/publicPagesJs")
        @RenderSection("styles", required: false)

    </head>
    <body id="bodyBackGround" >
        @Html.Partial("_ProcessingModal")
        <!-- Navigation -->
        <div class="header" id="header">
		    <div class="container">
			    <div class="header-logo">
				    <a href="" ><img src="../images/logo241x162.png" style="max-height:80px; max-width:100%" alt=""/></a>
			    </div>
			    <div class="top-nav" >
				    <span class="menu"><img src="../images/menu-icon.png" alt=""/></span>
				    <ul class="nav1">
					    <li>@Html.ActionLink("HOME", "Index", "Home")</li>					   
					    <li><a href="">BLOG</a></li>
					    <li>@Html.ActionLink("CONTACT", "Contact", "Home")</li>
                        <li>@Html.ActionLink("LOGIN", "Login", "Account")</li>
				    </ul>
				    <!-- script-for-menu -->
				     <script>
				         $("span.menu").click(function () {
				             $("ul.nav1").slideToggle(300, function () {
				                 // Animation complete.
				             });
				         });
				    </script>
				    <!-- /script-for-menu -->
			    </div>
			    <div class="social-icons">
				    <ul>
					    <li><a href="#"></a></li>
					    <li><a href="#" class="twit"></a></li>							
				    </ul>
                
			    </div>
           
			    <div class="clearfix"> </div>
		    </div>	
	    </div>   
        <div style="background-color:rgba(255,255,255,0.5); min-height: 568px;" >
            @RenderSection("featured", required: false) 
            <section >
                @RenderBody()
            </section> 
            
            <footer>
                <div class="content-wrapper">
                    <div class="float-left">
                        <p>&copy; @DateTime.Now.Year -VisaRoom</p>
                    </div>
                </div>
            </footer>
        </div>
      
@RenderSection("scripts", required: false)
    </body>
</html>
