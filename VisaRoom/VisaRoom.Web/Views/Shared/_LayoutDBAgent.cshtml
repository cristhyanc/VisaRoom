@model VisaRoom.Common.Models.UserTo
@using System.Web.Optimization
@using BootstrapSupport
@using NavigationRoutes
<!DOCTYPE html>
<html lang="en" style="background-color:white">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - VisaRoom</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        
        @Styles.Render("~/Content/DashBoard")
        @Styles.Render("~/content/publicPagesCss")
        @Scripts.Render("~/bundles/jquery")        
        @Scripts.Render("~/bootstrapjs")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/mainScript") 
        @Scripts.Render("~/publicPagesJs")    
       
        @RenderSection("styles", required: false)

    </head>
    <body id="bodyBackGround" >
        @Html.Partial("_ProcessingModal")
        <!-- Navigation -->
        <div class="header" id="header" style="max-height:120px">
		    <div class="container" >
			    <div class="header-logo">
				    <a href="" ><img src="../images/logo241x162.png" style="max-height:80px; max-width:100%" alt=""/></a>
			    </div>
			    <div class="top-nav" style="text-align:right; float: right">
				    <span class="menu"><img src="../images/menu-icon.png" alt=""/></span>
				    <ul class="nav1">
					    
                        <li>@Html.ActionLink("LogOut", "Login", "Account")</li>
				    </ul>
				   
			    </div>
			   
           
			    <div class="clearfix"> </div>
		    </div>	
	    </div>
        <div class="container" style="width:100%;">
            <div  class="row">
                <div  class="col-md-2  hidden-xs" style="color:white; background-color:#44546A; min-height: 540px; font-size:16px; text-align:left">
                    <div>
                        <p class="text-center">   
                          @{   if (ViewData.Model.PhotoProfile!=null && !ViewData.Model.PhotoProfile.Equals(string.Empty)) 
                               {
                                   <img src="~/assets/UserPhotos/@Html.Raw(ViewData.Model.PhotoProfile)" width="60%" class="user-image"/>    
                       
                               }
                               else
                               {
                                   <img src="~/assets/UserPhotos/find_user.png" width="60%" class="user-image img-responsive logo-center"/>   
                       
                               }
                          }                  
                        
                        </p>        
                    </div>
                    
                    <div class="PersonalDetailDiv">
                        <p class="text-center">
                            <strong>@Html.Raw(ViewData.Model.FirstName)</strong>
                            <br />
                            <strong style="font-size:14px">@Html.Raw(ViewData.Model.YearsExperience) years Experience</strong>
                            <br />
                                
                            <strong style="font-size:14px">MARN: @Html.Raw(ViewData.Model.MarnNumber)</strong>
                            <br />
                          
                        </p>
                     </div>
                    <div class="PersonalDetailDiv">
                        <i class="fa fa-building fa-fw"></i> @Html.Raw(ViewData.Model.City.Text)
                    </div>                   
                    <div class="PersonalDetailDiv">
                        <i class="fa fa-graduation-cap fa-fw"></i> @Html.Raw(ViewData.Model.Education)
                    </div>
                    <div class="PersonalDetailDiv">
                        <i  class="fa fa-language fa-fw"></i>
                          @{
                                bool two = false;
                                foreach (var item in ViewData.Model.Languages)
                                {
                                    if (!two)
                                    {
                                        two = true;    
                                        @Html.Raw("<ul>");               
                                        @Html.Raw(item.Text);
                                        @Html.Raw(", ");
                                    }
                                      else
                                     {
                                            two = false; 
                                            @Html.Raw(item.Text)
                                            @Html.Raw("</ul>");                                        
                                    }
                                }    
                         
                            }
                        
                    </div>                   
                    <div class="PersonalDetailDiv">
                        <i class="fa fa-home fa-fw"></i> 
                        @{
                                two = false;
                                foreach (var item in ViewData.Model.PassportHolders)
                                {
                                    if (!two)
                                    {
                                        two = true;    
                                        @Html.Raw("<ul>");               
                                        @Html.Raw(item.Text);
                                        @Html.Raw(", ");
                                    }
                                      else
                                     {
                                            two = false; 
                                            @Html.Raw(item.Text)
                                            @Html.Raw("</ul>");                                        
                                    }
                                }    
                         
                            }
                    </div>
                        
                   
                </div>
                <div class="col-md-10" >
                    <div style="background-color:rgba(255,255,255,0.5); min-height: 540px;" >
                        @RenderSection("featured", required: false) 
                        <section >                
                            @Html.Partial("_alerts")
                            @RenderBody()
                        </section> 
            
                
                    </div>
                </div>
           </div>
       </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year -VisaRoom</p>
                </div>
            </div>
        </footer>
@RenderSection("scripts", required: false)
    </body>
</html>
