@using VisaRoom.Web.App_GlobalResources;
<!doctype html>
<html>
<head>
	<title>VisaRoom</title>
	
	<!--web-font-->
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,700,300,600,800,400' rel='stylesheet' type='text/css'>
	<!--//web-font-->
	<!-- Custom Theme files -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="keywords" content="Free style Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template, 
		Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
	<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
	@Scripts.Render("~/mainScript")
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/content/bundle")
    @Scripts.Render("~/publicPagesJs")
    
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)

	<script type="text/javascript">
	    jQuery(document).ready(function ($) {
	        $(".scroll").click(function (event) {
	            event.preventDefault();
	            $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1000);
	        });
	    });
	</script>
	<!--//end-smoth-scrolling-->
</head>
<body>
    <div id="fb-root"></div>
    <script>     

        !function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https';
            if (!d.getElementById(id)) {
                js = d.createElement(s); js.id = id;
                js.src = p + '://platform.twitter.com/widgets.js';
                fjs.parentNode.insertBefore(js, fjs);
            }
        }
        (document, 'script', 'twitter-wjs');


        $("span.menu").click(function () {
            $("ul.nav1").slideToggle(300, function () {
                // Animation complete.
            });
        });

        (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.3";
        fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));

    </script>
	<!--header-->
	<div class="header" id="header">
		<div class="container">
			<div class="header-logo">
				<a href="" ><img src="images/logo241x162.png" style="max-height:80px; max-width:100%" alt=""/></a>
			</div>
			<div class="top-nav">
				<span class="menu"><img src="../images/menu-icon.png" alt=""/></span>
				<ul class="nav1">
					<li><a href="" class="active">@Html.Raw(@Resource.txt_homeUpperCase)</a></li>
					<li><a href="#seccionHowItWorks" class="scroll">@Html.Raw(@Resource.txt_HowItWorks)</a></li>
					<li><a href="#seccionWhy" class="scroll">@Html.Raw(@Resource.txt_whyVisaRoomUpperCase)</a></li>
					<li>@*<a href="#seccionRegister" class="scroll">@Html.Raw(@Resource.txt_RegisterUpperCase)</a>*@</li>
					<li><a href="http://visaroom.com.au/VisaBlog/">@Html.Raw(@Resource.txt_BlogUpperCase)</a></li>
					@*<li>@Html.ActionLink(@Resource.txt_ContactUpperCase, "Contact", "Home")</li>*@
                    <li>@*@Html.ActionLink(@Resource.txt_LoginUpperCase, "Login", "Account")*@</li>
				</ul>
				
			</div>





			<div class="social-icons">
				<ul>                    
					<li>                        
                        <a href="https://www.facebook.com/visaroom.com.au"></a>                        
					</li>
					<li><a href="https://twitter.com/VisaRoom" class="twit"></a></li>							
				</ul>
                
			</div>
           
			<div class="clearfix"> </div>
		</div>	
	</div>
	<!--//header-->
     @RenderSection("featured", required: false) 
            <section >
                @RenderBody()
            </section> 
	
	<!--footer-->
	<div class="footer">
		<div class="container">
			<div class="footer-grids">
				<div class="col-md-4 footer-grids-info">
					<h5>@Html.Raw(@Resource.txt_ContactUs)</h5>
					<ul>
						@Html.Raw(@Resource.txt_ContactUsDetails)
					</ul>
                    
				</div>
				<div class="col-md-4 footer-grids-info">
					<h5>@Html.Raw(@Resource.txt_Navigation)</h5>
					<ul>
						<li><a href="" class="active">@Html.Raw(@Resource.txt_homeUpperCase)</a></li>
					    <li><a href="#seccionHowItWorks" class="scroll">@Html.Raw(@Resource.txt_HowItWorks)</a></li>
					    <li><a href="#seccionWhy" class="scroll">@Html.Raw(@Resource.txt_whyVisaRoomUpperCase)</a></li>
					    <li>@*<a href="#seccionRegister" class="scroll">@Html.Raw(@Resource.txt_RegisterUpperCase)</a>*@</li>
					    <li><a href="http://visaroom.com.au/VisaBlog/">@Html.Raw(@Resource.txt_BlogUpperCase)</a></li>
					   @* <li>@Html.ActionLink(@Resource.txt_ContactUpperCase, "Contact", "Home")</li>*@
                        @*<li>@Html.ActionLink(@Resource.txt_LoginUpperCase, "Login", "Account")</li>*@
					</ul>
				</div>
				<div class="col-md-4 footer-grids-info">
					@Html.Raw(@Resource.txt_SubmitNewLetterDescription)
					<form>
						<input type="text" value="Your Name" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Your Name';}" required="">
						<input type="email" value="Your E-mail" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Your E-mail';}" required="">
						<input type="submit" value="Submit" >
					</form>		
				</div>
                <div class="col-md-12 footer-grids-info">
                    <ul>
                        <a class="fb-like" data-href="http://www.visaroom.com.au" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></a> 
                        <script src="//platform.linkedin.com/in.js" type="text/javascript"> lang: en_US</script>
                        <script type="IN/Share" data-url="http://www.visaroom.com.au" data-counter="right"></script>
                        <a href="https://twitter.com/VisaRoom" class="twitter-follow-button" data-show-count="false">Follow @Html.Raw("@VisaRoom")</a>
                        <a href="https://twitter.com/share" class="twitter-share-button" data-url="http://www.visaroom.com.au" data-via="Visaroom" data-related="Visaroom">Tweet</a>                  
                        
                    </ul>
                </div>
				<div class="clearfix"></div>
			</div>	
			<div class="copy-right">
				<p>&copy; @DateTime.Now.Year - VisaRoom</p>
			</div>
		</div>
	</div>	
	<!--//footer-->
	<!--smooth-scrolling-of-move-up-->
	<script type="text/javascript">
	    $(document).ready(function () {
	        /*
			var defaults = {
				containerID: 'toTop', // fading element id
				containerHoverID: 'toTopHover', // fading element hover id
				scrollSpeed: 1200,
				easingType: 'linear' 
			};
			*/
	        $().UItoTop({ easingType: 'easeOutQuart' });
	    });
	</script>
	<a href="#" id="toTop" style="display: block;"> <span id="toTopHover" style="opacity: 1;"> </span></a>
	<!--//smooth-scrolling-of-move-up-->
</body>
</html>	